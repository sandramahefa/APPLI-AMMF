<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fond"
    tools:context=".ListesSokajy">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/titre_sokajy"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="sokajy"/>
    </LinearLayout>
    <LinearLayout
        android:outlineSpotShadowColor="@color/design_default_color_secondary_variant"
        android:background="#FFF5EE"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Lohateny"/>
        <EditText
            android:id="@+id/sk_lohateny"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="11"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/sk_ch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-2dp"
            android:background="@drawable/chercher" />
    </LinearLayout>
    <ListView
        android:id="@+id/listes_view_sokajy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </ListView>

</LinearLayout>